<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="entity.Roles" table="ROLES">
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
        <property name="nazwa" column="name"/>
        <property name="kod" column="role_code" not-null="true"/>
        <set name="users">
            <key column="id"/>
            <one-to-many class="entity.Users"/>

        </set>
    </class>
    <class name="entity.Users" table="USERS">
        <id name = "id" type = "int" column = "id">
            <generator class="increment"/>
        </id>
        <property name="imie" column="forename"/>
        <property name="nazwisko" column="name"/>
        <property name="login" column="login" not-null="true"/>
        <property name="haslo" column="password" not-null="true"/>
        <many-to-one name="rola" column="role" not-null="true"/>
        <set name="zamowienia">
            <key column="id"/>
            <one-to-many class="entity.Orders"/>

        </set>
    </class>

    <class name="entity.Shoes" table="SHOES">
        <id name = "id" type = "int" column = "id">
            <generator class="increment"/>
        </id>
        <property name="nazwa" column="name" not-null="true"/>
        <property name="cena" column="value" not-null="true"/>
        <set name="rozmiary">
            <key column="id"/>
            <one-to-many class="entity.Products"/>

        </set>
    </class>

    <class name="entity.Products" table="PRODUCTS">
        <id name = "id" type = "int" column = "id">
            <generator class="increment"/>
        </id>
        <property name="size" column="size" not-null="true"/>
        <property name="status" column="available_status" not-null="true"/>
        <many-to-one name="shoe_id" column="shoe_id" not-null="true"/>

    </class>

    <class name="entity.Orders" table="ORDERS">
        <id name = "id" type = "int" column = "id">
            <generator class="increment"/>
        </id>
        <property name="data" column="date"/>
        <property name="status" column="status" not-null="true"/>
        <many-to-one name="customer" column="customer" not-null="true"/>
        <set name="pozycje">
            <key column="id"/>
            <one-to-many class="entity.Orders_positions"/>

        </set>

    </class>

    <class name="entity.Orders_positions" table="ORDERS_POSITIONS">
        <id name = "id" type = "int" column = "id">
            <generator class="increment"/>
        </id>

        <property name="ilosc" column="quantity" not-null="true"/>
        <property name="cena" column="single_price" not-null="true"/>
        <many-to-one name="order" column="order_id" not-null="true"/>
        <many-to-one name="produkt" column="product_id" not-null="true"/>

    </class>





